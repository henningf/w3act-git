# Configuration

application.name=w3act
application.context="/act"
application.version=PROD
application.langs="en,cy"

# Secret key
# ~~~~~
# The secret key is used to secure cryptographics functions.
# If you deploy your application to several instances be sure to use the same key!
application.secret="{{ application_secret }}"

# Database configuration
db.default.logStatements=true
db.default.driver=org.postgresql.Driver
db.default.url="postgres://{{ postgres_user }}:{{ postgres_passwd }}@{{ postgres_host }}/{{ postgres_database }}"

# Ebean configuration
ebean.default="models.*"

# Evolutions
# ~~~~~
evolutionplugin=enabled
applyEvolutions.default=true
#applyDownEvolutions.default=true

# Logger
# ~~~~~
# You can also configure logback (http://logback.qos.ch/), by providing a logger.xml file in the conf directory.

# Root logger:
logger.root=INFO

# Logger used by the framework: 
logger.play=INFO

# Logger provided to your application:
logger.application=DEBUG


# SMTP connection for email sending
host=juno.bl.uk
mail.user=""
mail.password=""
from="web-archivist@bl.uk"
port=25

# Location of privacy statement
privacy.statement = "{{ privacy_statement }}"

# Drupal connection
drupal_user=""
drupal_password=""

# Secret Server connection
secret_server_user=""
secret_server_password=""

# Host details
server_name="{{ w3act_server_name }}"

#The queue endpoint
queue_host="{{ amqp_queue_host  }}"
queue_port="{{ amqp_queue_port }}"
queue_name="{{ amqp_queue_name }}"
routing_key="{{ amqp_routing_key }}"
exchange_name="{{ amqp_exchange_name }}"

#Wayback-API endpoint
application.wayback.url="{{ application_wayback_url }}"
application.wayback.query.path="{{ application_wayback_query_path }}"

# Location of the global access playback resolver
application.access.resolver.url="{{ application_access_resolver_url }}"

# Location of Monitrix on ELK (Kibana) service:
application.monitrix.url="{{ application_monitrix_url }}"

# Location of pdftohtmlex web service:
application.pdftohtmlex.url="{{ application_pdftohtmlex_url }}"

#Pii endpoint
#pii_url="http://localhost:9000/act-ddhapt-dev/pii/vdc"

ehcacheplugin=disabled

#DDHAPT
enableDDHAPT=true
#dls.documents.ebook.sip.dir=/opt/data/w3act/ebooks
#dls.documents.ejournal.sip.dir=/opt/data/w3act/ejournals
#dls.documents.sip.copy.dir=/opt/data/dls_sips_copy

use.accounts={{ w3act_use_accounts }}
admin.default.email="{{ admin_default_email }}"
